<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"

    >
    <com.libRG.CustomTextView
        android:id="@+id/question_number_view_id"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:lib_setRoundedBorderColor="@color/colorPrimary"
        app:lib_setRoundedBGColor="@android:color/holo_blue_bright"
        app:lib_setRoundedView="true"
        app:lib_setShape="oval"
        />

    <TextView
        android:layout_toRightOf="@+id/question_number_view_id"
        android:id="@+id/question_data_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:lines="5"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:text="@string/dummy_text"
        tools:ignore="UnknownId" />
</RelativeLayout>